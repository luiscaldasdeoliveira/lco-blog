---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import profileImg from '../assets/profile.jpg';
---

<BaseLayout title="About Me" description="About Luis Caldas de Oliveira" lang="en">
	<div class="flex flex-col md:flex-row gap-8 items-start">
        <div class="w-full md:w-1/3">
            <Image src={profileImg} alt="Luis Caldas de Oliveira" class="rounded-lg shadow-md w-full" />
        </div>
        <div class="w-full md:w-2/3 prose">
            <h1>About Me</h1>
            <p>
                Hello! I am <strong>Luis Caldas de Oliveira</strong>. Welcome to my minimalist blog built with Astro and Tailwind CSS.
            </p>
            <p>
                I am passionate about technology, typography, and writing efficient code.
            </p>
            <h3>My Skills</h3>
            <ul>
                <li>Web Development</li>
                <li>System Architecture</li>
                <li>Digital Signal Processing</li>
            </ul>
        </div>
    </div>
</BaseLayout>
