---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog'))
    .filter(post => post.data.lang === 'en')
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Luis Caldas de Oliveira" description="Personal Blog" lang="en">
	<section class="space-y-8">
        <h1 class="text-3xl font-bold mb-8">Latest Writings</h1>
		<ul class="space-y-6">
			{
				posts.map((post) => (
					<li class="group">
						<a href={`/blog/${post.slug}/`} class="block">
                            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between">
							    <h2 class="text-xl font-semibold group-hover:text-blue-600 transition-colors">{post.data.title}</h2>
                                <p class="text-sm text-gray-400 shrink-0">
                                    <FormattedDate date={post.data.pubDate} />
                                </p>
                            </div>
                            <p class="text-gray-600 mt-1 line-clamp-2">{post.data.description}</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</BaseLayout>
